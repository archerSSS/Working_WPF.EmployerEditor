<Window x:Class="WPFEmployers.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFEmployers"
        xmlns:views="clr-namespace:WPFEmployers.Views"
        xmlns:vm="clr-namespace:WPFEmployers.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <!--views:EmployerList/-->
        <DataGrid>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия"></DataGridTextColumn>
                <DataGridTextColumn Header="Имя"></DataGridTextColumn>
                <DataGridTextColumn Header="Отчество"></DataGridTextColumn>
                <DataGridTextColumn Header="Дата рождения"></DataGridTextColumn>
                <DataGridTextColumn Header="Пол"></DataGridTextColumn>
                <DataGridTextColumn Header="Подразделение"></DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
